@{
    ViewData["Title"] = "Attendance";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}
<h1>Attendance</h1>
<div>
    <h2>Punch In Time</h2>
    <form method="post" action="/Attendance/PunchInTime">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#reasonModal">Punch In</button>
    </form>
</div>

<div>
    <h2>Punch Out Time</h2>
    <form method="post" action="/Attendance/PunchOutTime">
        <button type="submit" class="btn btn-primary">Punch Out</button>
    </form>
</div>

