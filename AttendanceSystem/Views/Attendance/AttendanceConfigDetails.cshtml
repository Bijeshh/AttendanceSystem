@inject IHttpContextAccessor httpContextAccessor
@model AttendanceSystem.Models.AttendanceConfig
@{
    ViewData["Title"] = "AttendanceConfigDetails";
    var username = httpContextAccessor.HttpContext.Session.GetString("Username");
    string layoutPath = (username == "admin") ? "~/Views/Shared/AdminLayout.cshtml" : "~/Views/Shared/EmployeeLayout.cshtml";
    Layout = layoutPath;
}

